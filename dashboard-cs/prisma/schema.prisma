generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       String        @id @default(uuid())
  email    String        @unique
  password String
  tasks    tasks[]
  logins   users_login[]
}

model users_login {
  id         String   @id @default(uuid())
  user_id    String
  user       users    @relation(fields: [user_id], references: [id])
  timestamp  DateTime @default(now())
  ip         String?
  user_agent String?

  @@index([user_id])
}

model tasks {
  id           String         @id @default(uuid())
  title        String
  description  String?
  status       tasks_status   @default(PENDING)
  category     tasks_category @default(OTHER)
  created_at   DateTime       @default(now())
  updated_at   DateTime?      @updatedAt
  completed_at DateTime?
  deleted_at   DateTime?
  user_id      String
  user         users          @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

enum tasks_status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum tasks_category {
  WORK
  PERSONAL
  STUDY
  HEALTH
  OTHER
}
